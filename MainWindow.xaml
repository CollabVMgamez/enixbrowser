<Window x:Class="EnixBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnixBrowser"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Enix Browser"
        Height="720"
        Width="1280"
        Background="#121212"
        PreviewKeyDown="Window_PreviewKeyDown">
    <DockPanel LastChildFill="True">

        <!-- Status bar -->
        <StatusBar DockPanel.Dock="Bottom"
                   Background="#1E1E1E"
                   Foreground="#FFFFFF">
            <TextBlock x:Name="StatusText"
                       Text="Ready"
                       Margin="4,0" />
        </StatusBar>

        <!-- Top chrome: navigation + bookmarks -->
        <StackPanel DockPanel.Dock="Top"
                    Background="#1E1E1E"
                    Orientation="Vertical">

            <!-- Navigation bar -->
            <Grid Margin="8,8,8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Nav buttons -->
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0"
                            Margin="0,0,8,0">
                    <Button x:Name="BackButton"
                            Content="←"
                            Width="32"
                            Height="28"
                            Margin="0,0,4,0"
                            Click="BackButton_Click" />
                    <Button x:Name="ForwardButton"
                            Content="→"
                            Width="32"
                            Height="28"
                            Margin="0,0,4,0"
                            Click="ForwardButton_Click" />
                    <Button x:Name="ReloadButton"
                            Content="⟳"
                            Width="32"
                            Height="28"
                            Margin="0,0,4,0"
                            Click="ReloadButton_Click" />
                    <Button x:Name="HomeButton"
                            Content="⌂"
                            Width="32"
                            Height="28"
                            Click="HomeButton_Click" />
                </StackPanel>

                <!-- Address bar -->
                <TextBox x:Name="AddressBar"
                         Grid.Column="1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0"
                         Padding="6,0"
                         KeyDown="AddressBar_KeyDown"
                         Text="" />

                <!-- Add bookmark button -->
                <Button x:Name="AddBookmarkButton"
                        Grid.Column="2"
                        Content="★"
                        Width="32"
                        Height="28"
                        Margin="8,0,4,0"
                        Click="AddBookmarkButton_Click" />

                <!-- History button -->
                <Button x:Name="HistoryButton"
                        Grid.Column="3"
                        Content="History"
                        Height="28"
                        Margin="4,0,0,0"
                        Padding="8,0"
                        Click="HistoryButton_Click" />

                <!-- Chat with page button -->
                <Button x:Name="ChatWithPageButton"
                        Grid.Column="4"
                        Content="Chat with Page"
                        Height="28"
                        Margin="4,0,0,0"
                        Padding="8,0"
                        Click="ChatWithPageButton_Click" />

                <!-- Toggle live code sandbox -->
                <Button x:Name="ToggleSandboxButton"
                        Grid.Column="5"
                        Content="Sandbox"
                        Height="28"
                        Margin="4,0,0,0"
                        Padding="8,0"
                        Click="ToggleSandboxButton_Click" />
            </Grid>

            <!-- Bookmark bar -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Margin="8,0,8,8">
                <ItemsControl x:Name="BookmarkBar">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Title}"
                                    Tag="{Binding Url}"
                                    Margin="0,0,4,0"
                                    Padding="8,4"
                                    Click="BookmarkBarItem_Click" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Main web content + live code sandbox split view -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Primary browser view -->
            <wv2:WebView2 x:Name="BrowserView"
                          Grid.Row="0"
                          NavigationStarting="BrowserView_NavigationStarting"
                          NavigationCompleted="BrowserView_NavigationCompleted" />

            <!-- Splitter between browser and sandbox -->
            <GridSplitter Grid.Row="1"
                          Height="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          Background="#333333"
                          ShowsPreview="False" />

            <!-- Live code sandbox (IDE-style split view) -->
            <Grid x:Name="SandboxPanel"
                  Grid.Row="2"
                  Visibility="Collapsed"
                  Background="#181818">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Margin="4">
                    <TextBlock Text="Live Code Sandbox"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <Button x:Name="PreviewCodeButton"
                            Content="Preview"
                            Margin="0,0,4,0"
                            Padding="8,2"
                            Click="PreviewCodeButton_Click" />
                    <Button x:Name="ClearCodeButton"
                            Content="Clear"
                            Margin="0,0,4,0"
                            Padding="8,2"
                            Click="ClearCodeButton_Click" />
                </StackPanel>

                <TextBox x:Name="CodeEditor"
                         Grid.Row="1"
                         Margin="4,0,4,2"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         TextWrapping="NoWrap"
                         FontFamily="Consolas"
                         Background="#1E1E1E"
                         Foreground="#FFFFFF" />

                <wv2:WebView2 x:Name="PreviewView"
                              Grid.Row="2"
                              Margin="4,2,4,4" />
            </Grid>
        </Grid>
    </DockPanel>
</Window>
